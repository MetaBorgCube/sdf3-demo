class Node extends Object {
   Num id EdgeList edges
}

class NodeList extends Object {
   Node head NodeList tail Bool hasValue Bool hasNext
   Node add(Node n) {
     if(this.hasValue)
       let NodeList newTail = new NodeList
        in {
          newTail.head = this.head;
          newTail.hasNext = this.hasNext;
          this.tail = newTail;
          this.hasNext = true;
          this.hasValue = true;
          this.head = n
        }
     else
       {
         this.hasValue = true;
         this.head = n
       }
   }

   Bool contains(Node n) {
     if(n.id == this.head.id)
       true
     else
       if(not this.hasNext)
         false
       else
         this.tail.contains(n)
   }
}

